<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="tabla_periodica">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="atomo" type="Tipo_atomo" minOccurs="1" maxOccurs="unbounded">
      </xs:sequence>
    </xs:complexType>
  </xs:element>
        
        
        <xs:complexType name="Tipo_atomo">
          <xs:sequence>
          
            <xs:element name="nombre" type="xs:string" minOccurs="1" maxOccurs="1"/>
            
            <xs:element name="simbolo" type="Tipo_simbolo" minOccurs="1" maxOccurs="1"/>
            
            <xs:element name="numero_atomico" type="xs:positiveInteger" minOccurs="1" maxOccurs="1"/>
            
            <xs:element name="peso_atomico" type="xs:float" minOccurs="1" maxOccurs="1"/>
            
            <xs:element name="punto_ebullicion" type="Tipo_ebullicion" minOccurs="1" maxOccurs="1"/>
            
            <xs:element name="densidad" type="Tipo_densidad"/>
            
          </xs:sequence>
        </xs:complexType>
          
          
          <xs:simpleType name="Tipo_simbolo">
          
          
            <xs:restriction base="xs:string">
  
              <xs:pattern value="[A-Z] [a-z]? [a-z]?"/>
            
            </xs:restriction>
          
          </xs:simpleType>
          
        
          <xs:complexType name="Tipo_ebullicion">
          
            <xs:simpleContent>
              
              <xs:extension base="xs:float">
              
                <xs:atribute name="unidades" type="Tipo_unidades" default="centigrados"/>
              
              </xs:extension>
            
            </xs:simpleContent>
          
          </xs:complexType>
          
          <xs:simpleType name="Tipo_unidades">
            
            <xs:restriction base="xs:string">
  
              <xs:enumetarion value="centigrados"/>
              <xs:enumetarion value="kelvin"/>
            
            </xs:restriction>
          
          </xs:simpleType>
          
          <xs:complexType name="Tipo_densidad">
          
            <xs:simpleContent>
              
              <xs:extension base="xs:float">
              
                <xs:atribute name="den_unidades" type="xs:string"/>
              
              </xs:extension>
            
            </xs:simpleContent>
          
          </xs:complexType>
          
            <xs:simpleType name="Tipo_estado">
            
            <xs:restriction base="xs:string">
              
              <xs:enumeration value="solido"/>
              <xs:enumeration value="liquido"/>
              <xs:enumeration value="gaseoso"/>
              <xs:enumeration value="plasma"/>
            
            </xs:restriction>
          
          </xs:simpleType>
        
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>